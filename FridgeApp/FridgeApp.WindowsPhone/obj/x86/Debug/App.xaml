<Application
    x:Class="FridgeApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:FridgeApp.Converters"
    xmlns:local="using:FridgeApp">

    <Application.Resources>
        <converters:ExpiredProductsConverter x:Key="ExpiredProductsConverter" />
        <converters:ChangeForeGroundColorConverter x:Key="ChangeForeGroundConverter" />
        
        <Style TargetType="TextBox" x:Name="TextBoxLabels">
            <Setter Property="Background" Value="Khaki" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="ExtraBold" />
        </Style>
        
        <Style TargetType="TextBlock" x:Name="TextBlockLabel">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>

        <Style TargetType="TextBlock" x:Name="TextBlockLabelForAddingProduct">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>

        <Style TargetType="Button" x:Name="ButtonActionStyle">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Background" Value="Azure" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
        </Style>

        <Style TargetType="TextBlock" x:Name="TextBlockHeading">
            <Setter Property="HorizontalAlignment" Value="left" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Margin" Value="25,0,0,0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
        </Style>

        <Style TargetType="TextBlock" x:Name="TextBlockPageHeading">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Margin" Value="0,0,-15,0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="38" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
        </Style>

        <Style TargetType="Button" x:Name="ButtonMainPage">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.6" />
            <Setter Property="Margin" Value="0,15,0,0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Background" Value="RosyBrown" />
            <Setter Property="Width" Value="400" />
        </Style>
        
        <Style TargetType="TextBlock" x:Name="TextBlockOnShakePage">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.95" />
            <Setter Property="Margin" Value="0,15,0,0" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <!--<Setter Property="Width" Value="400" />-->
            
        </Style>
        <DataTemplate x:Name="ExpiringProductsDataTemplate">
            <StackPanel Orientation="Vertical"
                                        Background="Azure"
                                        Opacity="0.7"
                                        Width="900">

                <TextBlock HorizontalAlignment="Stretch"
                                           FontSize="25"
                                           FontFamily="Comic Sans MS"
                                           Foreground="Red"
                                           FontWeight="Normal"
                                           Margin="15,0,0,0">
                                    
                                    <Run Text="{Binding ExpirationDays,Mode=TwoWay,Converter={StaticResource ExpiredProductsConverter}}"/>
                                    
                                    <Run Text="{Binding ExpirationDays}"
                                         FontSize="50"
                                         Foreground="DarkOliveGreen"
                                         />
                                    <Run Text=" days"
                                         FontSize="20"
                                         />

                </TextBlock>

                <Grid Margin="0,0,0,10"
                                      HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding Name}"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           TextAlignment="Left"
                                           HorizontalAlignment="Left"
                                           Foreground="DarkOliveGreen"
                                           FontSize="23"
                                           FontFamily="Comic Sans MS"
                                           Margin="35,0,0,0"
                                           FontWeight="Bold"/>

                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               Margin="15 0 0 0"
                                               FontFamily="Comic Sans MS"
                                               Foreground="DarkOliveGreen"
                                               FontWeight="ExtraBlack">
                                        
                                        <Run Text="Qty "
                                             FontSize="20"
                                             FontWeight="Normal"/>
                                        <Run Text="{Binding Quantity}"
                                             FontSize="23"/>

                    </TextBlock>
                </Grid>

                <TextBlock HorizontalAlignment="Stretch"
                                           FontFamily="Comic Sans MS"
                                           Margin="35,0,0,0"
                                           Foreground="Black"
                                           FontWeight="Bold">
                                    <Run Text="Purchased on: "
                                         FontSize="18"
                                         FontWeight="Normal"/>
                                    
                                    <Run Text="{Binding DateAdded}"
                                         FontSize="16"
                                         />
                </TextBlock>

                <TextBlock HorizontalAlignment="Stretch"
                                           Text="{Binding Description}"
                                           FontSize="20"
                                           FontFamily="Comic Sans MS"
                                           Foreground="Black"
                                           FontWeight="Normal"
                                           Margin="35,0,0,0"/>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Name="allProductsDataTemplate">

            <!-- Data Context = PhoneViewModel -->
            <Grid HorizontalAlignment="Right"
                      Background="Azure"
                      Opacity="0.8">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Width="100"
                       Height="80"
                       Source="{Binding ImagePath}" 
                       Grid.Row="0"
                       Grid.Column="0"/>

                <TextBlock Text="{Binding Name}"
                           FontSize="20"
                           Foreground="Black"
                           FontWeight="Bold"
                           Width="100"
                           Grid.Row="1"
                           Grid.Column="0"/>


                <Grid Grid.Row="0"
                      Grid.Column="1"
                      Grid.ColumnSpan="2">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock FontSize="20"
                               Foreground="Black"
                               FontWeight="Bold"
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               TextAlignment="Center">
                       <Run Text="{Binding ExpirationDays,Mode=TwoWay,Converter={StaticResource ExpiredProductsConverter}}"
                            Foreground="{Binding ExpirationDays, Mode=TwoWay, Converter={StaticResource ChangeForeGroundConverter}}"/>
                       <Run Text="{Binding ExpirationDays}"
                            FontSize="30"
                            Foreground="Red"/>
                       <Run Text=" days"/>
                    </TextBlock>

                    <TextBlock Text="{Binding Description}"
                           FontSize="20"
                           Foreground="Red"
                           Grid.Row="1"
                           Grid.Column="0"/>

                    <TextBlock FontSize="20"
                               Foreground="Violet"
                               TextAlignment="Right"
                               Grid.Row="1"
                               Grid.Column="1">
                        
                        <Run Text="Qty "/>
                        <Run Text="{Binding Quantity}"
                            FontSize="20"
                            Foreground="Red"/>

                    </TextBlock>
                </Grid>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>

